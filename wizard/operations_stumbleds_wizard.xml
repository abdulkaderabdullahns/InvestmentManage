<odoo>
    <data>
		<record id="operations_stumbleds_wizard_view_form" model="ir.ui.view">
			<field name="name">operations_stumbleds_wizard_view.form</field>
			<field name="model">operations_stumbleds.report.wizard</field>
			<field name="arch" type="xml">
                <form string="Operations Stumbleds Report">
				    <sheet>
                        <h1><marquee></marquee></h1>
                        <group>
                            <group>
                                <field name="from_date" required="True"/>
                            </group>
                        </group>
                        <footer>
                            <button name="get_report" string="Print Report" type="object" class="btn-primary" icon="fa-file-pdf-o"/>
                            OR 
                            <button string="Cancel" class="btn-danger" special="cancel" icon="fa-close"/>
                        </footer>
                    </sheet>
                </form>
			</field>
		</record>
        <act_window id="operations_stumbleds_report_wizard_action"
                    name="Operations Stumbleds Report"
                    res_model="operations_stumbleds.report.wizard"
                    view_mode="form"
                    target="new"
        />

    </data>
</odoo>